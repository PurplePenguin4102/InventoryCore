<Page
    x:Class="Inenvory.UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Inenvory.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Body">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="400" MaxWidth="400" Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/bkg.png"/>
        </Grid.Background>
        <Grid Grid.ColumnSpan="2" />
        <Grid x:Name="Owners">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Margin="0" TextWrapping="Wrap" Text="Owners" FontSize="36" Foreground="DarkSlateGray"/>
        </Grid>
        <!--<Rectangle Grid.Column="0" Fill="PaleVioletRed"/>
        <Rectangle Grid.Column="1" Fill="PowderBlue"/>-->
        
    </Grid>
</Page>
